<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_in_background"
    android:orientation="vertical">

    <Button
        android:id="@+id/login_btn_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_null"
        android:text="跳过登录"
        android:textColor="#e5dba8"
        android:textSize="16sp"></Button>


    <ImageView
        android:id="@+id/img_gaoneng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_center_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:padding="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gaoneng" />


    <LinearLayout
        android:id="@+id/login_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_wangji_zhuce"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#55000000"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="账号:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/line_victial"
                android:layout_width="1px"
                android:layout_height="5px"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignBottom="@+id/line_victial"
                android:background="@color/white" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="#55000000"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="密码:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_et_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/login_btn_eye_pass"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/start_btn_eye_bg" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/line_victial1"
                android:layout_width="1px"
                android:layout_height="5px"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignBottom="@+id/line_victial1"
                android:background="@color/white" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/shape_log_in_btn_state"
            android:text="登     录"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_wangji_zhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_btn_foget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_null"
            android:text="忘记密码"
            android:textColor="@drawable/start_btn_text_bottom"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@null"
            android:text="|"
            android:textColor="#CFCFCF" />

        <Button
            android:id="@+id/login_btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_null"
            android:text="点击注册"
            android:textColor="@drawable/start_btn_text_bottom"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>