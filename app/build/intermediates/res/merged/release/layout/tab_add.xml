<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="35dp">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/tab_add_btn_sell"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_post_sell" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/tab_add_btn_request"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_post_request" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/tab_add_btn_show"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_post_dynamic" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tab_add_btn_request2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="88dp"
                android:background="@drawable/btn_post_request"
                android:visibility="invisible" />

            <Button
                android:id="@+id/tab_add_btn_sell2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_post_sell"
                android:visibility="invisible" />

        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/tab_add_btn_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:background="@drawable/icon_add_cancel"
        android:textSize="16sp" />

</FrameLayout>