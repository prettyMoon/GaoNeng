<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_line_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_iv_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_btn_bg_dark"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_linear_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tab_iv_01"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:contentDescription="@null"
                android:paddingTop="2dp"
                android:src="@drawable/tab_01_btn_light" />

            <TextView
                android:id="@+id/tab_tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="消息"
                android:textColor="@color/tab_btn_light"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp"
            android:saveEnabled="false">

            <ImageView
                android:id="@+id/tab_iv_02"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab_02_btn_dark" />

            <TextView
                android:id="@+id/tab_tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="掌柜"
                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/tab_iv_03"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab_03_btn_dark" />

            <TextView
                android:id="@+id/tab_tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="需求"
                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab_03_btn_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text=""
                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/tab_iv_04"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab_04_btn_dark" />

            <TextView
                android:id="@+id/tab_tv_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="成果"
                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_linear_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_btn_bg_dark"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/tab_iv_05"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="2dp"
                android:src="@drawable/tab_05_btn_dark" />

            <TextView
                android:id="@+id/tab_tv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="我的"
                android:textColor="@color/tab_btn_dark"
                android:textSize="@dimen/tab_bottom_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>